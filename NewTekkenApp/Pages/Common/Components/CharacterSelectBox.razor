@page "/Common/Components/CharacterSelectBox"

@if (selectListItems == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div>
        <select id="Character" class="form-control" @onchange="(e =>  OnCharacterChanged.Invoke(int.Parse(e.Value.ToString())))">
            @foreach (var selectItem in selectListItems)
            {
                if (selectItem.Value == CharacterCode.ToString())
                {
                    <option value="@selectItem.Value" selected="selected">@selectItem.Text</option>
                }
                else
                {
                    <option value="@selectItem.Value">@selectItem.Text</option>
                }
            }
        </select>

    </div>
}
