@page "/Common/Components/StateGroupButtonList"

@if (selectListItems == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="btn-group me-2" role="group" aria-label="Basic radio toggle button group">
        @foreach (var selectItem in selectListItems)
        {

            <button type="button" class="btn btn-primary" value="@selectItem.Value" @onclick="() => OnStateGroupChanged.Invoke(int.Parse(selectItem.Value))">@selectItem.Text.Replace(" ", "\r\n")</button>
        }
    </div>
}

