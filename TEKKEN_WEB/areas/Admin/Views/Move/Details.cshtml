    <label class="col-sm-2">Command</label>
    <div class="col-sm-10">
        <label>@Model.Command</label>
    </div>
</div>*@


<div style="text-align:center;">

    <a asp-action="Remove" asp-route-Id="@Model.Id" class="btn btn-default">
        삭제
    </a>
    <a asp-action="Update" asp-route-Id="@Model.Id" class="btn btn-default">
        수정
    </a>
    <a asp-action="Remove" asp-route-Id="@Model.Id" class="btn btn-default">
        답변
    </a>

    <a asp-action="Index" class="btn btn-default">리스트</a>
</div>
<br />

@section Scripts {
    @if (TempData["Message"] != null)
    {
        <link href="~/lib/toastr/toastr.css" rel="stylesheet" />
        <script src="~/lib/toastr/toastr.js"></script>
        <script>
            $(function () {
                toastr.info('@TempData["Message"]');
            });
        </script>
    }
}