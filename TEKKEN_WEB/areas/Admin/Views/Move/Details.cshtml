<div class="row">
    <label class="col-sm-2">Code</label>
    <div class="col-sm-10">
        <label>@Model.Code</label>
    </div>
</div>

<div class="row">
    <label class="col-sm-2">Version</label>
    <div class="col-sm-10">
        <label>@Model.Version</label>
    </div>
</div>

