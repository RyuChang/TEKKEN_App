@model TranslateName[]
@using TEKKEN_WEB.Enums


<div class="row mb-3">
    <div class="col-3">
        <label class="col-form-label col-form-label-sm">코드</label>
    </div>
    <div class="col-9">
        <input type="text" class="form-control form-control-sm" value="@ViewBag.baseModel.Code" placeholder="col-form-label-sm" readonly="readonly">
    </div>
</div>

<div class="row mb-3">
    <div class="col-3">
        <label class="col-form-label col-form-label-sm">명칭</label>
    </div>
    <div class="col">
        <input type="text" class="form-control form-control-sm" value="@ViewBag.baseModel.Description" placeholder="col-form-label-sm" readonly="readonly">
    </div>
</div>
<br />


@{int i = 0; }
@foreach (var item in @ViewBag.translateNames)
{
<div class="row mb-1">
    <div class="col-1">
        <label asp-for="@Model[i].Code" class="col-form-label col-form-label-sm"></label>
    </div>
    <div class="col-2">
        <input asp-for="@Model[i].Code" class="form-control form-control-sm" value="@item.Code" readonly="readonly" />
    </div>

    <div class="col-1">
        <label asp-for="@Model[i].Id" class="col-form-label col-form-label-sm"></label>
    </div>
    <div class="col-2">
        <input asp-for="@Model[i].Id" class="form-control form-control-sm" value="@item.Id" readonly="readonly" />
    </div>
    <div class="col-1">
        <label class="col-form-label col-form-label-sm">Language</label>
    </div>
    <div class="col-2">
        <input asp-for="@Model[i].Language_Code" class="form-control col-form-label-sm" value="@item.Language_Code" readonly="readonly" />
    </div>

    <div class="col text-right">
        <div class="form-check">
            <input id="@String.Format("Change_{0}", @item.Language_Code)" asp-for="@Model[i].Change" class="form-check-input" type="checkbox">
            <label class="form-check-label" for="flexCheckChecked">
                Modified
            </label>
        </div>
    </div>
</div>
    <div class="row mb-1">
        <div class="col-1">
            <label class="col-form-label col-form-label-sm">AsIs</label>
        </div>
        <div class="col-11">
            <input type="text" class="form-control form-control-sm" value="@item.Name" placeholder="col-form-label-sm" readonly="readonly">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-1">
            <label class="col-form-label col-form-label-sm">ToBe</label>
        </div>
        <div class="col-11">
            <input id="@String.Format("TlanslatedCommand_{0}", @item.Language_Code)" language_Code="@item.Language_Code" asp-for="@Model[i].Name" type="text" class="form-control form-control-sm commandName" placeholder="col-form-label-sm" value="@item.Name" />
        </div>
    </div>
    i++;
}


<div class="row">
    <div class="col-sm-3">
        <input type="submit" value="@ViewBag.SaveButtonText" class="btn btn-primary" />
        <div class="col-sm-3">
        </div>
        <a asp-action="Index" class="btn btn-default" asp-route-character_code="@ViewBag.Character_Code">리스트</a>
    </div>
   
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <span class="text-danger">@ViewBag.ErrorMessage</span>
</div>
