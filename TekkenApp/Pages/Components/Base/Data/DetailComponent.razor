@page "/Components/Base/Data/DetailComponent"
@inherits BaseComponent<TDataEntity, TNameEntity>
@typeparam TDataEntity
@typeparam TNameEntity

<h3 class="mt-3 mb-3">Detail</h3>

<form method="post">
    <div class="mb-3 row">
        <label for="@BaseDataEntity.Id" class="col-1 col-form-label">ID</label>
        <div class="col-auto">
            <input type="text" readonly class="form-control" @bind="@BaseDataEntity.Id" />
        </div>
    </div>

    <div class="mb-3 row">
        <label for="@BaseDataEntity.Number" class="col-1 col-form-label">순번</label>
        <div class="col-auto">
            <input type="text" readonly class="form-control" @bind="@BaseDataEntity.Number"/>
        </div>
    </div>

    <div class="mb-3 row">
        <label for="@BaseDataEntity.Code" class="col-1 col-form-label">코드</label>
        <div class="col-auto">
            <input type="text" readonly class="form-control" @bind="@BaseDataEntity.Code" />
        </div>
    </div>

    <div class="mb-3 row">
        <label for="@BaseDataEntity.Description" class="col-1 col-form-label">설명</label>
        <div class="col-auto">
            <input type="text" readonly class="form-control" @bind="@BaseDataEntity.Description" />
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary btn-lg" value="수정" id="btnEdit" @onclick="()=>MoveToEdit(BaseDataEntity.Id)" />
                <input type="button" class="btn btn-primary btn-lg" value="삭제" id="btnDelete" @onclick="()=>MoveToDelete(BaseDataEntity.Id)" />
                <input type="button" class="btn btn-primary btn-lg" value="리스트" id="btnList" @onclick="()=>MoveToList()" />
            </div>
        </div>
    </div>
</form>
