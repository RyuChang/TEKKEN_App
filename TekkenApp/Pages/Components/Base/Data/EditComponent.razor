@page "/Components/Base/Data/EditComponent"
@inherits BaseComponent<TDataEntity, TNameEntity>
@typeparam TDataEntity
@typeparam TNameEntity

<h3 class="mt-3 mb-3">Edit</h3>

<EditForm Model="@BaseDataEntity" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="mb-3 row">
        <label for="@BaseDataEntity.Id" class="col-1 col-form-label">ID</label>
        <div class="col-auto">
            <input type="text" readonly class="form-control" @bind-value="@BaseDataEntity.Id" />
        </div>
    </div>

    <div class="mb-3 row">
        <label for="@BaseDataEntity.Number" class="col-1 col-form-label">순번</label>
        <div class="col-auto">
            <input type="text" class="form-control" value="@BaseDataEntity.Number" @oninput="@(e=>number_Changed((string)e.Value))" />
        </div>
    </div>

    <div class="mb-3 row">
        <label for="@BaseDataEntity.Code" class="col-1 col-form-label">코드</label>
        <div class="col-auto">
            <input type="text" readonly class="form-control" @bind-value="@BaseDataEntity.Code" />
        </div>
    </div>

    <div class="mb-3 row">
        <label for="@BaseDataEntity.Description" class="col-1 col-form-label">설명</label>
        <div class="col-auto">
            <input type="text" class="form-control" @bind-value="@BaseDataEntity.Description" />
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-md-4">
            <input type="button" class="btn btn-primary btn-lg" value="저장" id="SaveEdit" @onclick="SaveEdit" />
            <input type="button" class="btn btn-primary btn-lg" value="취소" id="Cancel" @onclick="()=>MoveToList()" />
        </div>
    </div>
</EditForm>