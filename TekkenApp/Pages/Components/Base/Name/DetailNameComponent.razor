@page "/Components/Base/Name/DetailNameComponent"
@inherits BaseComponent<TDataEntity, TNameEntity>
@typeparam TDataEntity
@typeparam TNameEntity

<h3 class="mt-3 mb-3">DetailName</h3>
@if (BaseNameEntity == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <form class="row g-3">
        <div class="mb-3 row">
            <label class="col-1 col-form-label">ID</label>
            <div class="col-auto">
                <input type="text" readonly class="form-control" @bind-value="@BaseNameEntity.Id" />
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-1 col-form-label">코드</label>
            <div class="col-auto">
                <input type="text" readonly class="form-control" @bind-value="@BaseNameEntity.Base_code" />
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-1 col-form-label">언어</label>
            <div class="col-auto">
                <input type="text" readonly class="form-control" @bind-value="@BaseNameEntity.Language_code" />
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-1 col-form-label">명칭</label>
            <div class="col-auto">
                <input type="text" readonly class="form-control" @bind-value="@BaseNameEntity.Name" />
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-md-4">
                <input type="button" class="btn btn-primary btn-lg" value="수정" id="MoveToEditName" @onclick="()=>MoveToEditName(BaseNameEntity.Id)" />
                <input type="button" class="btn btn-primary btn-lg" value="삭제" id="MoveToDeleteName" @onclick="()=>MoveToDeleteName(BaseNameEntity.Id)" />
                <input type="button" class="btn btn-primary btn-lg" value="리스트" id="MoveToList" @onclick="()=>MoveToList()" />
            </div>
        </div>
    </form>
}
