@page "/Components/Base/Name/EditNameComponent"
@typeparam TDataEntity
@typeparam TNameEntity

<h3>EditNameComponent</h3>
@if (nameEntity == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <form>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label>ID </label>
                    @nameEntity.Id
                </div>

                <div class="form-group">
                    <label>테이블명</label>
                    @nameEntity.GetTableName()
                </div>

                <div class="form-group">
                    <label>코드 </label>
                    @nameEntity.Base_code

                </div>
                <div class="form-group">
                    <label>입력 언어</label>
                    @nameEntity.Language_code
                </div>
                <div class="form-group">
                    <label>명칭</label>
                    <input type="text" name="name" @bind="@nameEntity.Name" />
                </div>

                btnEdit_Click

                <div class="form-group">
                    <input type="button" class="btn btn-primary" value="저장" id="btnEdit_Click" @onclick="btnSave_Click" />
                    <input type="button" class="btn btn-primary" value="리스트" id="btnList_Click" @onclick="btnList_Click" />
                </div>
            </div>
        </div>
    </form>
}