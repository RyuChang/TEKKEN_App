@page "/Components/Name/NameCreateComponent"
@typeparam TEntity
@typeparam TNameEntity

<h3>NameCreateComponent</h3>
@if (nameEntity == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <form>
        <div class="form-group row">
            <label class="col-sm-1 col-form-label">ID</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control" @bind-value="@nameEntity.Id" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-1 col-form-label">코드</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control" @bind-value="@nameEntity.Base_code" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-1 col-form-label">언어</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control" @bind-value="@nameEntity.Language_code" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-1 col-form-label">명칭</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" @bind-value="@nameEntity.Name" />
            </div>
        </div>
        <div class="form-group">
            <input type="button" class="btn btn-primary" value="저장" id="btnEdit_Click" @onclick="btnSave_Click" />
            <input type="button" class="btn btn-primary" value="삭제" id="btnDelete_Click" @onclick="btnDelete_Click" />
            <input type="button" class="btn btn-primary" value="리스트" id="btnList_Click" @onclick="btnList_Click" />
        </div>
    </form>
}
