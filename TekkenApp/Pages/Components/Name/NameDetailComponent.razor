@page "/Components/Name/NameDetailComponent"
@typeparam TEntity
@typeparam TNameEntity

<h3>NameDetailComponent</h3>
@if (nameEntity == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <form>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label>ID: </label>
                    @nameEntity.Id
                </div>

                <div class="form-group">
                    <label>테이블명</label>
                    @nameEntity.GetTableName()
                </div>

                <div class="form-group">
                    <label>코드 </label>
                    @nameEntity.Base_code

                </div>
                <div class="form-group">
                    <label>입력 언어</label>
                    @nameEntity.Language_code
                </div>


                <div class="form-group">
                    @*<a href="/HitTypes/Edit/@hitType_baseTranslateNamename.Id">Edit</a>
                        <a href="/HitTypes/Delete/@baseTranslateName.Id">Delete</a>*@

                    <input type="button" class="btn btn-primary" value="수정" id="btnEdit_Click" @onclick="btnEdit_Click" />
                    <input type="button" class="btn btn-primary" value="삭제" id="btnDelete_Click" @onclick="btnDelete_Click" />
                    <input type="button" class="btn btn-primary" value="리스트" id="btnList_Click" @onclick="btnList_Click" />
                </div>
            </div>
        </div>
    </form>
}
