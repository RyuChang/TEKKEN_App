@page "/Components/SharedComponents/StateGroupSelectBox"


@if (stateGroupList == null)
{


    <p><em>Loading...</em></p>
}
else
{
    <div>
        <select class="form-select">
            <option value="">-- Select Country --</option>
            @foreach (StateGroup stateGroup in stateGroupList)
            {
                <option value="@stateGroup.Code">@stateGroup.StateGroup_name.Where(p=>p.Language_code=="ko").FirstOrDefault()</option>

            }
        </select>
    </div>
}


