@page "/HitTypes/Create"

<h3>Create</h3>

<form method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="@hitType.Number" class="control-label">순번</label>
                <input type="text" @bind="@hitType.Number" class="form-control" />
            </div>

            <div class="form-group">
                <label for="@hitType.Code" class="control-label">코드</label>
                <input type="text" @bind="@hitType.Code" class="form-control" />
            </div>


            <div class="form-group">
                <label for="@hitType.Description" class="control-label">설명</label>
                <input type="text" @bind="@hitType.Description" class="form-control" />
            </div>
        </div>


    </div>

    <div class="row">
        <div class="col-md-4">
            <input type="button" id="btnSave" value="Save" @onclick="btnSave_Click" class="btn btn-primary" />
        </div>
    </div>
</form>
